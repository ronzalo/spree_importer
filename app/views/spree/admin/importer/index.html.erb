<% content_for :page_title do %>
  <%= Spree.t("spree_importer.products.import.title") %>
<% end %>

<%= form_tag admin_importer_index_path, multipart: true, use_route: "spree" do |f| %>
  <fieldset class="general no-border-top">
    <div data-hook="admin_importer_form" class="row">
      <div data-hook="admin_importer_file", class='col-md-6'>
        <div class="form-group">
          <%= label_tag :file, raw(Spree.t(:file) + content_tag(:span, ' *',  :class => "required")) %>
          <%= file_field_tag :file, class: 'fullwidth' %>
        </div>
      </div>
    </div>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t("spree_importer.products.import.submit_text"), 'ok' %><span class="or"><%= Spree.t(:or) %></span>
      <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), spree.admin_products_path, :class => 'button' %>
    </div>

  </fieldset>
<% end %>

<br>
<br>
<br>

<p>
  <%= Spree.t("spree_importer.products.import.download_message") %>
  <%= link_to Spree.t("spree_importer.products.import.template_link_text"), template_admin_importer_index_path%>
</p>
